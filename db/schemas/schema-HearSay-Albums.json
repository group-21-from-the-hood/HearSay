{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "_id",
    "artist",
    "dislikes",
    "genre",
    "image",
    "likes",
    "name",
    "releaseDate",
    "reviews",
    "songs",
    "spotifyAlbumId"
  ],
  "properties": {
    "_id": {
      "$ref": "#/$defs/ObjectId"
    },
    "artist": {
      "type": "object",
      "required": [
        "name",
        "oid"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "oid": {
          "type": "string"
        }
      }
    },
    "dislikes": {
      "type": "string"
    },
    "genre": {
      "type": "array",
      "items": {
        "type": []
      }
    },
    "image": {
      "type": "string"
    },
    "likes": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "rating": {
      "type": "string"
    },
    "releaseDate": {
      "type": "string"
    },
    "reviews": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "review_oid",
          "user_oid"
        ],
        "properties": {
          "review_oid": {
            "type": "string"
          },
          "user_oid": {
            "type": "string"
          }
        }
      }
    },
    "songs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "oid"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "oid": {
            "type": "string"
          }
        }
      }
    },
    "spotifyAlbumId": {
      "type": "string"
    }
  },
  "$defs": {
    "ObjectId": {
      "type": "object",
      "properties": {
        "$oid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{24}$"
        }
      },
      "required": [
        "$oid"
      ],
      "additionalProperties": false
    }
  }
}